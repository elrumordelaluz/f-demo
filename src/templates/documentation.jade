              i(class='#{docs.larger} pe-lg pe-va')
              |  #{docs.larger}
            p
              i(class='#{docs.larger} pe-2x pe-va')
              |  #{docs.larger}
            p
              i(class='#{docs.larger} pe-3x pe-va')
              |  #{docs.larger}
            p
              i(class='#{docs.larger} pe-4x pe-va')
              |  #{docs.larger}
            p
